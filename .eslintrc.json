{
  "env": {
    "node": true
  },
  "extends": [
    "bloq"
  ],
  "rules": {
    "arrow-body-style": "warn",
    "consistent-return": "warn",
    "jsdoc/require-jsdoc": "off",
    "no-shadow": [
      "warn",
      {
        "allow": [
          "err"
        ]
      }
    ],
    "promise/no-promise-in-callback": "warn",
    "require-jsdoc": "off"
  }
}