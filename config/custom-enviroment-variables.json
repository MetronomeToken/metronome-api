{
  "server": {
    "maxResultsLimit": 1000,
    "port": 3002
  },

  "newrelic": {
    "apikey": "NEW_RELIC_API_KEY",
    "level": "NEW_RELIC_LOG_LEVEL"
  },

  "cors": {
    "origin": "*"
  },

  "mongo": {
    "url": "MONGO_URL",
    "testUrl": "MONGO_TEST_URL"
  },

  "logger": {
    "sentry": {
      "dsn": "SENTRY_DSN"
    },

    "console": {
      "level": "LOG_LEVEL",
      "timestamp": true,
      "handleExceptions": true,
      "humanReadableUnhandledException": true,
      "colorize": true
    },

    "papertrail": {
      "colorize": true,
      "flushOnClose": true,
      "handleExceptions": true,
      "host": "PAPERTRAIL_HOST",
      "inlineMeta": true,
      "level": "PAPERTRAIL_LOG_LEVEL",
      "port": "PAPERTRAIL_PORT",
      "program": "metronome-api"
    }
  },

  "eth": {
    "enabled": true,
    "ipcPath": "ENODE_IPC_PATH",
    "webSocketUrl": "ENODE_WS_API_URL",
    "tokenAddress": "MET_TOKEN_ADDR",
    "auctionAddress": "MET_AUCT_ADDR",
    "minterAddress": "MINTER_ADDR",
    "exportStartBlock": "EXPORT_START_BLOCK"
  }
}
