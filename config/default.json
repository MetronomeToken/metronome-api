{
  "port": 3002,

  "server": {
    "maxResultsLimit": 1000,
    "queryLimit": 500
  },

  "cors": {
    "origin": "*"
  },

  "mongo": {
    "url": "mongodb://localhost/met"
  },

  "logger": {
    "console": {
      "level": "debug",
      "timestamp": true,
      "handleExceptions": true,
      "humanReadableUnhandledException": true,
      "colorize": true
    },
    "papertrail": {
      "colorize": true,
      "flushOnClose": true,
      "handleExceptions": true,
      "inlineMeta": true
    }
  },

  "eth": {
    "enabled": true,
    "ipcPath": "/Library/Ethereum/geth.ipc",
    "webSocketUrl": "ws://localhost:8546",
    "minterAddress": "0x0000000000000000000000000000000000000000",
    "exportStartBlock": 0,
    "founderTokens": "2000000000000000000000000"
  }
}
